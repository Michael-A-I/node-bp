<h2>Search Books</h2>


<form action="/books" method="GET">
    <div>
        <label>Title</label>
        <input type="text" name="title" id="" value="<%= searchOptions.title%> ">
        <button type="submit">Search</button>
    </div>
    <div>
        <label>Published After</label>
        <input type="date" name="publishedAfter" id="" value="<%= searchOptions.publishedAfter%> ">
        <button type="submit">Search</button>
    </div>
    <div>
        <label>Published Before</label>
        <input type="date" name="publishedBefore" id="" value="<%= searchOptions.publishedBefore%> ">
        <button type="submit">Search</button>
    </div>
</form>

<br>
<!-- display all books images see author.js using ejs-->
<%  books.forEach(book =>{ %>
    <div>
        <!-- set value to fs path of book to ref image -->
        <img height="150" width="100" src="<%= book.coverImagePath%>" alt="">
    </div> 
        
<% })%>

